---
permalink: /feed.xml
layout: null
---
{% set latest = collections.notes | first %}
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.title }}</title>
  <link href="{{ site.url }}/feed.xml" rel="self" />
  <link href="{{ site.url }}" />
  <updated>{% if latest %}{{ latest.date | dateToRfc3339 }}{% else %}{{ runtime.buildTime }}{% endif %}</updated>
  <id>{{ site.url }}/</id>
  <author>
    <name>{{ site.author.name }}</name>
  </author>
  {% for post in collections.notes %}
  <entry>
    <title>{{ post.data.title }}</title>
    <link href="{{ site.url }}{{ post.url }}" />
    <id>{{ site.url }}{{ post.url }}</id>
    <updated>{{ post.date | dateToRfc3339 }}</updated>
    <summary>{{ post.data.excerpt }}</summary>
    <content type="html"><![CDATA[{{ post.templateContent | safe }}]]></content>
  </entry>
  {% endfor %}
</feed>
